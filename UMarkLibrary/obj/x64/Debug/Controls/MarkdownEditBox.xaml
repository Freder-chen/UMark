<UserControl x:ConnectionId='1'
    x:Class="UMarkLibrary.MarkdownEditBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UMarkLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <ScrollViewer x:ConnectionId='2'
                                
                               
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto">
        <Grid>
            <Canvas x:ConnectionId='3' x:Name="SelectionElement"                                 >
                <Rectangle x:ConnectionId='6' x:Name="BeforeSelection"                                        />
                <Rectangle x:ConnectionId='7' x:Name="Selection"                                        />
                <Rectangle x:ConnectionId='8' x:Name="AfterSelection"                                        />
            </Canvas>
            <Border x:ConnectionId='4' x:Name="ContentElement">
                <local:MarkdownTextBlock x:ConnectionId='5' x:Name="TextBlock"/>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>

